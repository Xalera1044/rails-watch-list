
<div class="banner-list" style="background-image: url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80)">
<%= link_to 'Add a movie', new_movie_path(@movie), class: "btn btn-success"  %>
</div>


<div class="movie-cards">
  <div class="list-text">
    <h3>My Movies</h3>
  </div>
<div class="container my-3">
    <div class="movie-card">
          <% @movies.each do |movie| %>
            <div class="list-group-item">
            <%= image_tag movie.poster_url, class:"poster-img" %>
              <div class="movie-card-text">
                <h4><strong><%= movie.title %> â€¢ <%= movie.rating %><i class="fas fa-star star-yellow"></i></strong></h4>
                <p class="overflow-ellipsis"><%= movie.overview %></p>
                <div class="show-delete">
                  <%= link_to "See more", movie_path(movie) %>
                  <%= link_to "Delete",
                                movie_path(movie),
                                method: :delete,
                                data: { confirm: "Are you sure?" } %>
                </div>
              </div>
            </div>
          <% end %>
    </div>
  </div>
</div>
